<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="6dp"
        android:paddingRight="6dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context=".new_word.AddNewWordActivity" android:focusable="false"
        android:orientation="vertical" android:background="#555555">
<!--
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
-->
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scrollView">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/llWordOptions" android:background="#fffde5"
                    android:layout_marginBottom="3dp">
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spSelectPoS"
                        android:focusable="false"
                        android:entries="@array/pos_types"
                        android:layout_weight="1"/>
                <Spinner
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/spSelectStemClass"
                        android:entries="@array/noun_types"
                        android:layout_weight="2"/>
            </LinearLayout>
            <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="#fffcbb" android:columnCount="2"
                    android:rowCount="3" android:layout_marginBottom="3dp" android:id="@+id/glWordForm">
                <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:layout_marginBottom="3dp"
                        android:layout_column="0" android:layout_columnSpan="2" android:id="@+id/tlOverrides">
                    <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" android:weightSum="1"
                            android:layout_weight="1" android:id="@+id/trPrimaryNounForm">
                        <Button
                                style="?android:attr/buttonStyleSmall"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:text="P"
                                android:id="@+id/button3" android:layout_weight="0.2" android:textStyle="bold"
                                android:textColor="#2f6f9d"
                                android:textAlignment="center" android:textSize="20dp"
                        />
                        <Spinner
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/spNounDecl" android:layout_gravity="center"
                                android:entries="@array/noun_decl"
                                android:layout_weight="0.3"/>
                        <EditText
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/etNewWord.PriText" android:layout_gravity="right" android:layout_weight="0.5"
                        />
                    </TableRow>
                </TableLayout>
                <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add form overriding"
                        android:id="@+id/button"
                        android:drawableLeft="@android:drawable/ic_input_add" android:drawablePadding="6dp"
                        android:gravity="left|center" android:layout_column="0" android:layout_row="2"
                        android:onClick="addNewOverride"/>
                <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save"
                        android:id="@+id/button2" android:layout_column="1" android:layout_row="2"
                        android:drawableLeft="@android:drawable/ic_menu_save"
                        android:layout_gravity="center"/>
            </GridLayout>
            <!--LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/llVerbControlPanel">
                <ExpandableListView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/expandableListView" android:footerDividersEnabled="false"
                        />
            </LinearLayout-->
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/llDeclensionList"
                    android:layout_marginBottom="3dp" >
                <!--include layout="@layout/noun_declension" /-->
            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/llVerbDeclensions"
                    android:background="#fffde5" android:paddingTop="6dp" android:visibility="gone"
                    android:layout_marginBottom="3dp">
                <include layout="@layout/verb_declension"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>