<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.hyenawarrior.myapplication.MainActivity">

    <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/btnNewWord" android:layout_alignParentRight="true"/>
    <SearchView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/searchView"
            android:orientation="vertical" android:layout_alignParentLeft="true" android:layout_toLeftOf="@+id/btnNewWord"/>
    <ListView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/listView"
            android:headerDividersEnabled="false"
            android:fastScrollAlwaysVisible="false"
            android:layout_alignParentStart="false" android:layout_alignParentEnd="false"
            android:layout_below="@+id/searchView" android:layout_alignParentLeft="true"
    >
    </ListView>
</RelativeLayout>
