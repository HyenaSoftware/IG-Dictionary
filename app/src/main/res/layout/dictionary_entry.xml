<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:columnCount="2"
              android:rowCount="2"
              android:layout_weight="5" android:orientation="vertical"
              android:baselineAligned="false" android:clickable="false" android:onClick="onClickOnAnEntry">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="2" android:id="@+id/llWordForms"
    >
        <!-- color: #535164 -->
        <!--include layout="@layout/word_form_entry"/-->
    </LinearLayout>
    <TextView
            android:layout_height="wrap_content"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:text="Medium Text"
            android:id="@+id/tvDesc"
            android:layout_width="wrap_content" android:textStyle="bold"
            android:textColor="#5154a4"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/llMeanings" android:layout_marginLeft="10dp">
    </LinearLayout>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:id="@+id/llFormTable" android:layout_marginLeft="10dp"
                  android:visibility="gone">
        <include layout="@layout/verb_conjugation_viewer" />
    </LinearLayout>
</LinearLayout>
