<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:columnCount="2"
              android:rowCount="2"
              android:layout_weight="5" android:orientation="horizontal"
              android:baselineAligned="false">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="0px"
            android:layout_height="wrap_content" android:layout_weight="2" android:id="@+id/llWordForms"
    >
        <!-- color: #535164 -->
        <!--include layout="@layout/word_form_entry"/-->
    </LinearLayout>
    <TableLayout
            android:layout_width="0px"
            android:layout_height="wrap_content" android:layout_weight="3" android:baselineAligned="false"
    >
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Small"
                    android:text="Medium Text"
                    android:id="@+id/tvDesc"
                    android:layout_width="wrap_content" android:layout_weight="2" android:textStyle="bold"
                    android:textColor="#5154a4"/>
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/llMeanings">
            </LinearLayout>
        </TableRow>
    </TableLayout>
</LinearLayout>
