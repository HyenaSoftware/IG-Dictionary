<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceSmall" android:text="Strong/Weak X-class"
              android:textAlignment="center" android:id="@+id/tv.noun.class" android:layout_weight="1"
              android:background="#fffde5"/>
    <TextView android:layout_width="match_parent"
              android:textAppearance="?android:attr/textAppearanceMedium" android:text="Indefinite forms"
              android:textStyle="bold"
              android:layout_height="wrap_content" android:background="#4d4ec7" android:layout_marginTop="6dp"
              android:textColor="#ffffff" android:paddingLeft="3dp"/>
    <include layout="@layout/noun_declension_viewer_forms" android:id="@+id/frame.noun.indef"/>
    <TextView android:layout_width="match_parent" android:textAppearance="?android:attr/textAppearanceMedium"
              android:text="Definite forms" android:textStyle="bold"
              android:layout_height="wrap_content" android:background="#4d4ec7" android:layout_marginTop="6dp"
              android:paddingLeft="3dp" android:textColor="#ffffff"/>
    <include layout="@layout/noun_declension_viewer_forms" android:id="@+id/frame.noun.def"/>
</LinearLayout>